model users {
    id Int @id @default(autoincrement())
    post Posts[]
    firstName String
    lastName String
    email String @unique
    password String
    role String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Posts {
    id Int @id @default(autoincrement())
    user users @relation(fields: [userId] , references: [id])
    userId Int
    image Json
    comments Comments[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Comments {
    id Int @id @default(autoincrement())
    post Posts @relation(fields: [postId], references: [id])
    postId Int
    content String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}