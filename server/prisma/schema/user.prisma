model users {
    id Int @id @default(autoincrement())
    post Posts[]
    firstName String
    lastName String
    email String
    password String
}


model Posts {
    id Int @id @default(autoincrement())
    user users @relation(fields: [userId] , references: [id])
    userId Int
    image Json
    comments Comments[]
}

model Comments {
    id Int @id @default(autoincrement())
    post Posts @relation(fields: [postId], references: [id])
    postId Int
    content String
}